{
  "compilerOptions": {
    "allowJs": true,
    "baseUrl": "./src",
    "checkJs": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "lib": ["es5", "es6", "dom"],
    "module": "commonjs",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "pretty": true,
    "sourceMap": true,
    "strictNullChecks": false,
    "suppressImplicitAnyIndexErrors": true,
    "maxNodeModuleJsDepth": 0,
    "target": "es5"
  },
  "exclude": ["build", "dist", "node_modules", "target"],
  "types": ["types/**/*"],
  "compileOnSave": false
}

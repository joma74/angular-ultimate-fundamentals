{
  "compilerOptions": {
    "allowJs": true,
    "baseUrl": "./src",
    "checkJs": true,
    "declaration": true,
    "declarationMap": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "lib": ["es5", "es6", "dom"],
    "module": "commonjs",
    "moduleResolution": "node",
    "noEmitHelpers": true,
    "noImplicitAny": true,
    "pretty": true,
    "sourceMap": true,
    "strictNullChecks": false,
    "suppressImplicitAnyIndexErrors": true,
    "target": "es5"
  },
  "compileOnSave": false,
  "awesomeTypescriptLoaderOptions": {}
}
